import java.util.HashMap;
import java.util.Scanner;
import java.util.Map;
public class Main
{
	public static void main(String[] args) {
	HashMap<String, Integer> people= new HashMap<>();
	   Scanner input = new Scanner(System.in);


	while (true){
		 
        System.out.println(" Welcome to the register of people! \n please select a option \n 1- enter a new name and age \n 2-search a person \n 3-list \n 4-exit ");
        if (input.hasNextInt()){
        Integer menu_op = input.nextInt();
        input.nextLine();
        
      switch( menu_op){
           
       case 1 :
            System.out.println("enter the name of the person: ");
            String	person_name = input.nextLine();
            System.out.println("enter the age of the person: ");
            if(input.hasNextInt()){
            Integer person_age = input.nextInt();
            people.put(person_name, person_age);
            
             System.out.println("person is now registered! \n ");
            }
            else{
                System.out.println("the age is invalid");
                input.nextLine();
            }
             break;
        
        case 2:
	System.out.println("enter a name for search: ");
   String user_search = input.nextLine();
	 Integer user_age = people.get(user_search.toLowerCase());
	 if (user_age != null){
	     System.out.println( user_search + " is " + user_age + " years old");
	 }
	 else {
	 System.out.println("Theres no one with that name \n \n ");
	 }
        break;
        
    case 3:
for (Map.Entry<String, Integer> entry : people.entrySet()) 
System.out.println("name: " + entry.getKey() + ", age: " + entry.getValue());         
         break;
         
    case 4:
            input.close();
            return;

	 default:
	    System.out.println(" error in the option please try again \n \n ");
 break;
	 
	}
	}else{
	    System.out.println(" error in the option please try again \n \n ");
	    input.nextLine();
	}
	}
	}
}
