import java.util.HashMap;
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	HashMap<String, Integer> people= new HashMap<>();
	   Scanner input = new Scanner(System.in);


	while (true){
		System.out.println(" Welcome to the register of people! \n please select a option \n 1- enter a new name and age \n 2-search a person \n 3-exit ");
        if (input.hasNextInt()){
        Integer menu_op = input.nextInt();
        input.nextLine();
        if( menu_op == 1 ){
            System.out.println("enter the name of the person: ");
            String	person_name = input.nextLine();
            System.out.println("enter the age of the person: ");
            Integer person_age = input.nextInt();
            people.put(person_name, person_age);
             System.out.println("person is now registered! \n ");
        }
        if ( menu_op == 2){
	System.out.println("enter a name for search: ");
   String user_search = input.nextLine();
	 Integer user_age = people.get(user_search.toLowerCase());
	 if (user_age != null){
	     System.out.println( user_search + " is " + user_age + " years old");
	 }
	 else {
	 System.out.println("Theres no one with that name \n \n ");
	 }
        }
         if (menu_op == 3 ){
            input.close();
            return;
	}
	 if (menu_op <1 || menu_op > 3){
	    System.out.println(" error in the option please try again \n \n ");

	 }
	}
	else{
	    System.out.println(" error in the option please try again \n \n ");
	    input.nextLine();
	}
	}
	}
}
